# Auto detect text files and perform LF normalization
* text=auto

# Source code files - enforce LF
*.py text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation files
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf
Makefile text eol=lf
*.mk text eol=lf

# Shell scripts (Unix LF)
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts (CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files - do not modify
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.bmp binary

# Font files
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.rar binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Compiled files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.exe binary
*.app binary

# Node.js
package-lock.json text eol=lf linguist-generated=true
yarn.lock text eol=lf linguist-generated=true

# Python
*.py text diff=python

# JavaScript/TypeScript
*.js text diff=javascript
*.jsx text diff=javascript
*.ts text diff=javascript
*.tsx text diff=javascript

# JSON - pretty print diffs
*.json text

# YAML - explicit handling
*.yml text
*.yaml text

# License and legal files
LICENSE* text eol=lf
COPYING* text eol=lf
COPYRIGHT* text eol=lf
NOTICE* text eol=lf

# Documentation
README* text eol=lf
CHANGELOG* text eol=lf
CONTRIBUTING* text eol=lf
HISTORY* text eol=lf
AUTHORS* text eol=lf

# Ignore generated files in language stats
frontend/dist/** linguist-generated=true
*.map linguist-generated=true
*.min.js linguist-generated=true
*.min.css linguist-generated=true