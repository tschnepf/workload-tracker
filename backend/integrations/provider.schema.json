{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Integrations Provider Metadata",
  "type": "object",
  "required": [
    "providerSchemaVersion",
    "key",
    "displayName",
    "oauth",
    "baseUrlVariants",
    "rateLimits",
    "objects"
  ],
  "additionalProperties": true,
  "properties": {
    "providerSchemaVersion": { "type": "string" },
    "key": { "type": "string" },
    "displayName": { "type": "string" },
    "oauth": {
      "type": "object",
      "required": ["flows", "scopes", "authBaseUrl", "tokenUrl"],
      "properties": {
        "flows": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["authorization_code_pkce", "client_credentials"]
          },
          "minItems": 1
        },
        "scopes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "authBaseUrl": { "type": "string" },
        "tokenUrl": { "type": "string" }
      },
      "additionalProperties": true
    },
    "requiredHeaders": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "required": ["key", "label", "source"],
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "source": { "type": "string", "enum": ["env", "connection"] },
          "envKey": { "type": "string" }
        },
        "additionalProperties": true
      },
      "default": []
    },
    "baseUrlVariants": {
      "type": "object",
      "required": ["default"],
      "properties": {
        "default": { "type": "string" },
        "sandbox": { "type": "string" }
      },
      "additionalProperties": { "type": "string" }
    },
    "rateLimits": {
      "type": "object",
      "properties": {
        "requestsPerMinute": { "type": "integer", "minimum": 1 },
        "burst": { "type": "integer", "minimum": 1 },
        "maxConcurrentPerConnection": { "type": "integer", "minimum": 1 },
        "globalRequestsPerMinute": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "objects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["key", "label", "fields", "capabilities"],
        "additionalProperties": true,
        "properties": {
          "key": { "type": "string" },
          "label": { "type": "string" },
          "capabilities": {
            "type": "object",
            "properties": {
              "list": { "type": "boolean" },
              "delta": { "type": "boolean" }
            },
            "additionalProperties": true
          },
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["key", "label", "type"],
              "properties": {
                "key": { "type": "string" },
                "label": { "type": "string" },
                "type": { "type": "string" },
                "nullable": { "type": "boolean" },
                "description": { "type": "string" }
              },
              "additionalProperties": true
            }
          },
          "hierarchy": {
            "type": "object",
            "properties": {
              "parentKey": { "type": "string" },
              "childPredicate": { "type": "string" }
            },
            "required": ["parentKey"],
            "additionalProperties": true
          },
          "filters": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "query": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["query"],
              "additionalProperties": true
            }
          },
          "deletionPolicy": { "type": "string" },
          "mapping": {
            "type": "object",
            "properties": {
              "schemaVersion": { "type": "string" },
              "defaults": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["source", "target"],
                  "properties": {
                    "source": { "type": "string" },
                    "target": { "type": "string" },
                    "behavior": { "type": "string" },
                    "description": { "type": "string" }
                  },
                  "additionalProperties": true
                }
              }
            },
            "required": ["schemaVersion", "defaults"],
            "additionalProperties": true
          }
        }
      }
    }
  }
}
