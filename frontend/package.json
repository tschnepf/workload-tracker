{
    "name": "workload-tracker-frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build",
        "build:analyze": "vite build && echo 'Bundle analysis generated at dist/stats.html'",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:soft": "eslint . --ext ts,tsx --report-unused-disable-directives",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "e2e": "playwright test",
        "e2e:ui": "playwright test --ui",
        "e2e:codegen": "playwright codegen",
        "openapi:types": "openapi-typescript ../backend/openapi.json -o src/api/schema.ts",
        "openapi:regen": "npm run openapi:types",
        "check:health": "node scripts/check-file-health.mjs",
        "check:health:projects": "node scripts/check-file-health-projects.mjs",
        "prepare": "husky install"
    },
    "overrides": {
        "esbuild": "0.25.9"
    },
    "dependencies": {
        "@lhci/cli": "0.15.1",
        "@sentry/react": "10.8.0",
        "@sentry/vite-plugin": "4.2.0",
        "@tanstack/react-query": "5.59.0",
        "@tanstack/react-query-devtools": "5.59.0",
        "@tanstack/react-virtual": "3.13.12",
        "openapi-fetch": "0.9.2",
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "react-router": "7.9.1",
        "serve": "14.2.5",
        "web-vitals": "5.1.0"
    },
    "devDependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@playwright/test": "1.47.2",
        "@testing-library/jest-dom": "6.6.2",
        "@testing-library/react": "16.3.0",
        "@testing-library/user-event": "14.5.2",
        "@types/react": "19.1.13",
        "@types/react-dom": "19.1.9",
        "@typescript-eslint/eslint-plugin": "8.8.1",
        "@typescript-eslint/parser": "8.8.1",
        "@vitejs/plugin-react": "5.0.2",
        "autoprefixer": "10.4.21",
        "eslint": "9.35.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-import-resolver-typescript": "3.6.1",
        "eslint-plugin-import-x": "4.2.1",
        "eslint-plugin-react-hooks": "5.1.0",
        "eslint-plugin-react-refresh": "0.4.13",
        "husky": "9.1.7",
        "jsdom": "25.0.1",
        "lint-staged": "15.2.10",
        "msw": "2.4.9",
        "openapi-typescript": "6.7.6",
        "postcss": "8.5.6",
        "prettier": "3.3.3",
        "rollup-plugin-visualizer": "6.0.3",
        "tailwindcss": "3.4.13",
        "typescript": "5.9.2",
        "vite": "7.1.5",
        "vitest": "3.2.4"
    },
    "lint-staged": {
        "src/pages/Projects/**/*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix",
            "npm run -s check:health:projects"
        ],
        "src/components/projects/ProjectStatusDropdown.tsx": [
            "prettier --write",
            "eslint --fix",
            "npm run -s check:health:projects"
        ]
    }
}
